<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cardImgMenu"
        android:layout_width="318dp"
        android:layout_height="210dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:background="@drawable/bottom_sheet_backgroundwhite">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_maindiches"
                android:scaleType="centerCrop"/>

            <ImageView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="105dp"
                android:layout_height="53dp"
                android:src="@drawable/img_freedrink"
                android:visibility="visible"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/tvTitleMenu"
        app:layout_constraintStart_toStartOf="@id/cardImgMenu"
        app:layout_constraintTop_toBottomOf="@id/cardImgMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Disches"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tvTitleMenu"
        app:layout_constraintTop_toBottomOf="@id/tvTitleMenu"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_width="11dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star"/>
        <TextView
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9"
            android:textColor="#EF5B5B"/>
        <TextView
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(355 ratings) - Starts at"
            android:textColor="#746969"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 10.000,00"
            android:textColor="#EF5B5B"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>