<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FEF9F9">

    <LinearLayout
        android:id="@+id/description"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:textColor="#5E5959"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our fried rice is made from the finest ingredients and veggies. Every single dish is made with fresh vegetables. Each plate is served with our signature chicken and a free"
            android:textSize="10sp"
            android:textColor="#5E5959"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/review"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toEndOf="@id/description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Reviews"
            android:textSize="9sp"
            android:textColor="#5E5959"
            android:textStyle="bold"
            />

        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/lineblack"/>

        <LinearLayout
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
        </LinearLayout>

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sarah Ofilia"
            android:textSize="6sp"
            android:textStyle="bold"
            android:textColor="#5E5959"
            />

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great Meal but delivery was a bit late"
            android:textSize="7sp"
            android:textColor="#5E5959"
            />

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3min ago"
            android:textSize="5sp"
            android:textStyle="italic"
            android:textColor="#5E5959"
            />

        <View
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/lineblack"/>

        <LinearLayout
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"/>
        </LinearLayout>

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sarah Ofilia"
            android:textSize="6sp"
            android:textStyle="bold"
            android:textColor="#5E5959"
            />

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great Meal but delivery was a bit late"
            android:textSize="7sp"
            android:textColor="#5E5959"
            />

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3min ago"
            android:textSize="5sp"
            android:textStyle="italic"
            android:textColor="#5E5959"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>