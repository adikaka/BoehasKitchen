<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FEF9F9">

    <TextView
        android:id="@+id/ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textSize="20sp"
        android:textColor="#5E5959"
        android:textStyle="bold"
        />
    
    <LinearLayout
        android:id="@+id/imgIngredients"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <ImageView
            android:layout_width="69dp"
            android:layout_height="47dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/iv_ingredient_one"/>

        <ImageView
            android:layout_width="69dp"
            android:layout_height="47dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/iv_ingredient_two"/>

        <ImageView
            android:layout_width="69dp"
            android:layout_height="47dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/iv_ingredient_three"/>

        <ImageView
            android:layout_width="69dp"
            android:layout_height="47dp"
            android:src="@drawable/iv_ingredient_four"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tvIngreOne"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:text="Saus sambal enak"
            android:textSize="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvIngreTwo"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:text="Saus sambal enak"
            android:textSize="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvIngreThree"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:text="Saus sambal enak"
            android:textSize="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvIngreFour"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:text="Saus sambal enak"
            android:textSize="10dp"
            android:textAlignment="center"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>